{
    "name": "Inline Google Search",
    "description": "Highlight text and see Google Search results without having to switch tabs.",
    "version": "0.0.1",
    "author": "Anthony Dellavecchia",
    "manifest_version": 3,
    "homepage_url": "https://github.com/anthonyjdella/inline-google-search",
    "default_locale": "en",
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    },
    "action": {
        "default_popup": "/popup/popup.html",
        "default_title": "Inline Google Search \n\nHighlight text to use!"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+U",
                "mac": "Ctrl+U"
            },
            "description": "Shortcut to open Inline Google Search"
        }
    },
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_ui": {
        "page": "/options/options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": ["<all_urls>"],
            "js": ["/popup/popup.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["/popup/popup.html"],
            "matches": ["<all_urls>"],
            "extension_ids": ["djcgjbpoapahbnjdkepflmlonemomhek"]
        }
    ]
}
